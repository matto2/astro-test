---
import Layout from "../layouts/Layout.astro";
import Lightbox from "../components/Lightbox.svelte";
---

<Layout title="O'Leary Studios">
  <main>
    <h1>O'Leary <span class="text-gradient">Studios</span></h1>
    <!-- <p class="instructions">
      I'm going to be displaying and selling my art at the West End Celebration
      in Sand City California on August 26-27 - See you there! <a
        href="https://westendcelebration.com/">More info here</a
      >
    </p> -->

    <div class="container mx-auto max-w-prose my-3 mb-12">
      <p>
        Thanks for stopping by! Check out my art below and see more over on <a
          href="https://www.instagram.com/olearystudios/">Instagram</a
        >
        <p>
          <a href="mailto:mattosurf@gmail.com"> Email me</a> if you're interested
          in buying an original or print. See more about me <a href="/about"
            >here</a
          >
        </p>
      </p>
    </div>
    <Lightbox client:load />    
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    /* max-width: calc(100% - 2rem); */
    color: white;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  main h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }

</style>
